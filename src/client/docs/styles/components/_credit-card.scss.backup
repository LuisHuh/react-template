/**
 * @component Credit Card
 * @version 1.0.0
 * @author lhuh
 * @summary Estilos de tarjeta de credito
 */

 $credit-card-width: 250px !default;
 $credit-card-height: 142.85px !default;
 $credit-card-font-family: "Helvetica Neue", Helvetica, Arial, sans-serif !default;
 $credit-card-border-radius: 10px !default;
 $credit-card-background: #ddd !default;
 $credit-card-back-background: #fff !default;
 
 // #region Estilos Base
 @mixin credit-card {
    perspective: 1000px;
    width: $credit-card-width;
    max-width: 100%;
    height: $credit-card-height;
    margin: auto;
    z-index: 1;
    position: relative;
 }
 
 @mixin cd-wrapper {
    font-family: $credit-card-font-family;
    line-height: 1;
    position: relative;
    width: 100%;
    height: 100%;
    min-width: $credit-card-width;
    border-radius: $credit-card-border-radius;
    transform-style: preserve-3d;
    transition: all 400ms linear;
 }
 
 @mixin cd-front {
    position: absolute;
    backface-visibility: hidden;
    transform-style: preserve-3d;
    transition: all 400ms linear;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    overflow: hidden;
    border-radius: $credit-card-border-radius;
    background: $credit-card-background;
 
    &::before {
       content: " ";
       position: absolute;
       display: block;
       width: 100%;
       height: 100%;
       top: 0;
       left: 0;
       opacity: 0;
       border-radius: $credit-card-border-radius;
       transition: all 400ms ease;
    }
 
    &::after {
       content: " ";
       display: block;
    }
 }
 
 @mixin cd-back {
    @include cd-front;
    transform: rotateY(180deg);
 
    &::after {
       content: " ";
       display: block;
       background-color: $credit-card-back-background;
       background-image: linear-gradient(
          $credit-card-back-background,
          $credit-card-back-background
       );
       width: 80%;
       height: 16%;
       position: absolute;
       top: 40%;
       left: 2%;
    }
 }
 
 @mixin cd-types {
    position: absolute;
    opacity: 0;
    right: 5%;
    top: 8%;
    transition: 400ms;
 }
 
 @mixin cd-front-badges {
    /* width: 90%; */
    position: absolute;
    top: 10%;
    left: 5%;
    bottom: 10%;
    right: 5%;
 
    /* @include medium-screen() {
       width: 80%;
       left: 10%;
    } */
 }
 
 @mixin cd-back-badges {
 }
 
 @mixin cd-shiny {
    width: 50px;
    height: 35px;
    border-radius: 5px;
    background: #ccc;
    position: relative;
 
    &::before {
       content: " ";
       display: block;
       width: 70%;
       height: 60%;
       border-top-right-radius: 5px;
       border-bottom-right-radius: 5px;
       background: #d9d9d9;
       position: absolute;
       top: 20%;
    }
 }
 
 @mixin cd-cvc {
    visibility: hidden;
    float: right;
    position: relative;
    bottom: 5px;
 }
 
 @mixin cd-number {
    clear: both;
    margin-bottom: 30px;
 }
 
 @mixin cd-holder-name {
    text-transform: uppercase;
    max-height: 45px;
    width: 75%;
    float: left;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: horizontal;
    overflow: hidden;
    text-overflow: ellipsis;
 }
 
 %expiry-pseudo {
    white-space: pre;
    display: block;
    opacity: 0.5;
    text-transform: uppercase;
 }
 
 @mixin cd-expiry {
    letter-spacing: 0em;
    position: relative;
    float: right;
    width: 25%;
 
 
    &::before {
       content: attr(data-before);
       margin-bottom: 2px;
       text-transform: uppercase;
       @extend %expiry-pseudo;
    }
 
    &::after {
       content: attr(data-after);
       position: absolute;
       text-align: right;
       right: 100%;
       margin-right: 5px;
       margin-top: 2px;
       bottom: 0;
 
       @extend %expiry-pseudo;
    }
 }
 // #endregion
 
 // #region Estilos de tarjetas
 
 // #endregion
 
 @mixin web-credit-card {
    [component="credit-card"] {
       @include credit-card;
       .cd-group{
          @include clearfix;
       }
    }
 
    [component="cd-wrapper"] {
       @include cd-wrapper;
       .cd-front {
          @include cd-front;
       }
 
       .cd-back {
          @include cd-back;
       }
 
       .cd-badges {
          @include cd-front-badges;
       }
 
       [component="cd-shiny"] {
          @include cd-shiny;
       }
 
       [component="cd-cvc"] {
          @include cd-cvc;
       }
 
       [component="cd-number"] {
          @include cd-number;
       }
 
       [component="cd-holder"] {
          @include cd-holder-name;
       }
 
       [component="cd-expiry"] {
          @include cd-expiry;
       }
    }
 }
 
 @include web-credit-card;
 